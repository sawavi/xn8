<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:fadeScrollbars="false"
    android:orientation="vertical"
    tools:context="com.example.aaryan.xn8.TwoFragmentOne">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        >
        <!-- TODO: Update blank fragment layout -->
        <RelativeLayout
            android:id="@+id/addBankLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:background="@color/grey_100" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Your Bank Account Details."
                android:id="@+id/textAddBankDetails"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:theme="@style/ThemeOverlay.MyTitleText"
                android:paddingBottom="10dp" />


            <CheckBox android:id="@+id/checkCurrent"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="@color/blue_shade1"
                android:text="Current Account"
                android:layout_below="@+id/textAddBankDetails"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:textSize="14sp" />

            <CheckBox android:id="@+id/checkSaving"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="@color/blue_shade1"
                android:text="Saving Account"
                android:layout_alignTop="@+id/checkCurrent"
                android:layout_alignParentRight="true"
                android:textSize="14sp"
                android:paddingRight="10dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Account No. :"
                android:id="@+id/textAccNum"
                android:layout_below="@+id/checkCurrent"
                android:layout_alignParentLeft="true"
                android:paddingBottom="15dp"
                android:theme="@style/ThemeOverlay.MyAllText"/>


            <EditText
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:id="@+id/fieldAccNum"
                android:hint="Enter Account Number"
                android:layout_alignTop="@+id/textAccNum"
                android:layout_alignParentRight="true"
                android:textSize="14sp"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Debit/Credit Card No.:"
                android:id="@+id/textCardNum"
                android:layout_below="@+id/textAccNum"
                android:layout_alignParentLeft="true"
                android:paddingBottom="15dp"
                android:theme="@style/ThemeOverlay.MyAllText"/>


            <EditText
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:id="@+id/fieldCardNum"
                android:hint="Debit/Credit Card Number"
                android:layout_alignTop="@+id/textCardNum"
                android:layout_alignParentRight="true"
                android:textSize="14sp"
                android:textColor="@color/colorBlack"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="IFSC Code :"
                android:id="@+id/textIFSCCode"
                android:layout_below="@+id/textCardNum"
                android:layout_alignParentLeft="true"
                android:paddingBottom="15dp"
                android:theme="@style/ThemeOverlay.MyAllText"/>


            <EditText
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:id="@+id/fieldIFSCCode"
                android:hint="Enter Bank IFSC Code"
                android:layout_alignTop="@+id/textIFSCCode"
                android:layout_alignParentRight="true"
                android:textSize="14sp"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Bank Name:"
                android:id="@+id/textBankName"
                android:layout_below="@+id/textIFSCCode"
                android:layout_alignParentLeft="true"
                android:paddingBottom="15dp"
                android:theme="@style/ThemeOverlay.MyAllText"/>

            <EditText
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:hint="Enter Bank Name"
                android:id="@+id/fieldBankName"
                android:layout_alignTop="@+id/textBankName"
                android:layout_alignParentRight="true"
                android:textSize="14sp"
                android:textColor="@color/colorBlack"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Bank Branch:"
                android:id="@+id/textBankBranch"
                android:layout_below="@+id/textBankName"
                android:layout_alignParentLeft="true"
                android:paddingBottom="15dp"
                android:theme="@style/ThemeOverlay.MyAllText"/>

            <EditText
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:hint="Enter Bank Branch"
                android:id="@+id/fieldBankBranch"
                android:layout_alignTop="@+id/textBankBranch"
                android:layout_alignParentRight="true"
                android:textSize="14sp"
                android:textColor="@color/colorBlack"/>




            <Button
                android:id="@+id/btSave"
                android:text="Save >>"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textBankBranch"
                android:layout_alignParentRight="true"
                android:theme="@style/ThemeOverlay.MyDarkButton"
                />

        </RelativeLayout>

    </LinearLayout>


</ScrollView>
