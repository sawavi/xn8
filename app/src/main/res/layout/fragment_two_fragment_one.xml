<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="50dp"
    android:fadeScrollbars="false"
    tools:context="com.example.aaryan.xn8.TwoFragmentOne">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        >
        <!-- TODO: Update blank fragment layout -->
        <RelativeLayout
            android:id="@+id/addBankLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:background="@color/grey_100" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Your Bank Account Details Of Home Branch. "
                android:id="@+id/textAddBankDetails"
                android:layout_alignParentLeft="true"
                android:theme="@style/ThemeOverlay.MyInstructionText"
                android:paddingBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Bank Name:"
                android:id="@+id/textBankName"
                android:layout_below="@+id/textAddBankDetails"
                android:layout_alignParentLeft="true"
                android:paddingBottom="15dp"
                android:theme="@style/ThemeOverlay.MyAllText"/>

            <EditText
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:hint="Enter Bank Name"
                android:id="@+id/fieldBankName"
                android:layout_alignTop="@+id/textBankName"
                android:layout_alignParentRight="true"
                android:textSize="14sp"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="IFSC Code :"
                android:id="@+id/textIFSCCode"
                android:layout_below="@+id/textBankName"
                android:layout_alignParentLeft="true"
                android:paddingBottom="15dp"
                android:theme="@style/ThemeOverlay.MyAllText"/>


            <EditText
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:id="@+id/fieldIFSCCode"
                android:hint="Enter Bank IFSCCode"
                android:layout_alignTop="@+id/textIFSCCode"
                android:layout_alignParentRight="true"
                android:textSize="14sp"
                android:textColor="@color/colorBlack"/>


            <CheckBox android:id="@+id/checkAgg"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="@color/blue_shade1"
                android:text="Accept Agreement"
                android:layout_below="@+id/textIFSCCode"
                android:layout_alignParentLeft="true"
                android:textSize="14sp"
                android:onClick="onCheckboxClicked" />



            <Button
                android:id="@+id/btSubmit"
                android:text="Submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fieldPwd"
                android:layout_alignTop="@+id/checkAgg"
                android:layout_alignParentRight="true"
                android:theme="@style/ThemeOverlay.MyDarkButton"
                android:onClick="registerUser" />
        </RelativeLayout>

    </LinearLayout>


</ScrollView>
