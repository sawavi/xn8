<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_send_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:fadeScrollbars="false"
    tools:context="com.example.aaryan.xn8.sendLoginActivity">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:titleTextAppearance="@style/MyTitleTextStyle"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    </android.support.design.widget.AppBarLayout>


    <!-- IMP: paddingTop="76dp"   as toolbar height is set to 72dp -->

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="76dp"


            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome"
                android:id="@+id/textWelcome"
                android:layout_gravity="center"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:theme="@style/ThemeOverlay.MyTitleText"
                android:paddingBottom="50dp" />


            <TextView
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="Enter ID"
                android:id="@+id/textID"
                android:layout_alignTop="@+id/fieldID"
                android:layout_toLeftOf="@+id/textWelcome"
                android:textSize="15dp"
                android:textColor="@color/colorBlack"/>

            <EditText
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:hint="Your ID"
                android:id="@+id/fieldID"
                android:layout_below="@+id/textWelcome"
                android:layout_alignParentRight="true"
                android:textSize="15dp"
                android:textColor="@color/colorBlack"/>



            <TextView
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="Password"
                android:id="@+id/textPwd"
                android:layout_alignBottom="@+id/fieldPwd"
                android:layout_alignRight="@+id/textID"
                android:textSize="15dp"
                android:textColor="@color/colorBlack"/>


            <EditText
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/fieldPwd"
                android:hint="Password"
                android:layout_below="@+id/fieldID"
                android:layout_alignLeft="@+id/fieldID"
                android:textSize="15dp"
                android:textColor="@color/colorBlack"/>




            <Button
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="Resend Password"
                android:id="@+id/btResendPwd"
                android:layout_below="@+id/fieldPwd"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:theme="@style/ThemeOverlay.MyDarkButton"
                />
            <Button
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="Login"
                android:id="@+id/btLogin"
                android:theme="@style/ThemeOverlay.MyDarkButton"
                android:layout_alignTop="@+id/btResendPwd"
                android:layout_alignParentRight="true"/>


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="56dp"
                android:id="@+id/loginErrorMsg"
                android:textColor="@color/colorBlack"
                android:layout_below="@+id/btResendPwd"
                android:layout_alignParentLeft="true"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Note: PAN or Aadhaar Card Number Is Your ID As Entered During Registration"
                android:id="@+id/textNote"
                android:layout_gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:theme="@style/ThemeOverlay.MyInstructionText"
                />

        </RelativeLayout>


    </RelativeLayout>
</ScrollView>